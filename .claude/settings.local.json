{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "Bash(git:*)",
      "Bash(pwsh:*)",
      "Bash(powershell:*)"
    ]
  },
  "outputStyle": "Explanatory",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[Hook:PreToolUse] Bash実行: $(date '+%Y-%m-%d %H:%M:%S')\" >> /tmp/claude-hooks.log 2>&1 || true"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[Hook:PostToolUse] ツール完了: $(date '+%Y-%m-%d %H:%M:%S')\" >> /tmp/claude-hooks.log 2>&1 || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[Hook:Stop] セッション終了: $(date '+%Y-%m-%d %H:%M:%S')\" >> /tmp/claude-hooks.log 2>&1 || true"
          }
        ]
      }
    ]
  }
}
